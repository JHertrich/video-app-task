{% extends 'base.html.twig' %}

{% block stylesheets %}
   {{ parent() }}
   <link rel="stylesheet" href="/static/plyr.css" 
{% endblock %}


{% block body %}
   <div class="container py-5">
      <div class="row">
         <div class="col-sm-2 col-xs-0"></div>
         <div class="col-sm-8 col-xs-12">
            <h4 class="pb-2">{{videodata.name}}</h4>
            <video id="player" playsinline controls width="100%">
               <source src="/videofiles/{{videodata.file}}" type="video/mp4" />
            </video>
         </div>
         <div class="col-sm-2 col-xs-0"></div>
      </div>
   </div>

   {% block javascripts %}
      {{ parent() }}
      <script src="/static/plyr.js"></script>
      <script>
         const player = new Plyr('#player');
      </script>
   {% endblock %}
{% endblock %}






